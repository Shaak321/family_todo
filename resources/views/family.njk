{% extends 'index' %}

{% block content %}

<div class="row">
    <h2>Admin of the family: <a href="/profile/{{familyAdminId}}">{{familyAdmin.name}}</a><h2>
    <div class="col-md-3 col-md-offset-1">

        <div class="panel panel-default">
  		        <div class="panel-heading">
                   Members of {{familyInfo.name}} family
                </div>
  			  <div class="panel-body">
                    <ul class="list-group">
                    {% for member in members%}
                    <div class="list-group">
                            <h4 class="list-group-item-heading"><a href="/profile/{{member.id}}">{{member.name}}</a></h4>
                    </div>
                    {%endfor%}
                    </ul>
  	          </div>
  		</div>
    </div>
</div>
{% endblock %}