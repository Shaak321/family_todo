{% extends 'index' %}

{% block content %}
<div class="row">
    <div class="col-md-4 col-md-offset-4">

        {% if addMemberMessage %}
          <div class="alert alert-info" role="alert">{{addMemberMessage}}</div>
        {% endif%}

        {% if old('errors') %}
          <div class="alert alert-danger" role="alert">
              <ul>
              {% for error in old('errors') %}
              <li>{{ error.message }}</li>
              {% endfor %}
              </ul>
          </div>
        {% endif %}

        <form class="form-horizontal" role="form" method="POST" action="/add_family_member/{{family.id}}">

          {{ csrfField }}

          <div class="form-group">
              <label for="name">New family member's username:</label>
              <input type="text" class="form-control" id="member_name" name="member_name" placeholder="Family member username" value="{{ old('member_name')}}">
          </div>
          <button type="submit" class="btn btn-primary">Add new member</button>
        </form>
    </div>
</div>
{% endblock %}